    <script id="scripts" type="text/javascript" src="/scripts.js?c297ffc94dc8b1cc0bf99a59b92ce1f9f01f5208"></script>


</head>

<body>
    <div class="container">
        <%- include("slidebar") %>

            <main>

                <div class="dashboard">
                    <div>
                        <h1>Leave</h1>
                    </div>
                    <div>
                        <div class="gadgets-side__header">
                            <button class="menu-button" id="menu-btn">
                                <span class="material-icons-sharp menu-button__icon">menu</span>
                            </button>

                            <div class="theme-toggler">
                                <span class="
                          material-icons-sharp 
                          theme-toggler__button
                          theme-toggler__button--light
                          theme-toggler__button--active">light_mode</span>
                                <span class="
                          material-icons-sharp 
                          theme-toggler__button--dark
                          theme-toggler__button">dark_mode</span>
                            </div>

                            <div class="profile">
                                <div class="profile__info">
                                    <p>Hey, <b>Jyotsana</b></p>
                                    <small class="text-muted">SDL-1</small>
                                </div>
                                <div>
                                    <img class="profile__photo" src="/assets/profile-3.jpg" alt="profile-picture">
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="main-content">
                    <div class="content">
                        <div class="search">
                            <input type="text" placeholder="Search...">
                        </div>
                        <div class="status">
                            <select class="status" name="status">
                                <option value="All">Status:All<i class="bi bi-chevron-down"></i></option>
                                <option value="Accepted">Accepted</option>
                                <option value="Rejected">Rejected</option>
                                <option value="Pending">Pending</option>
                                <option value="WFH">WFH</option>
                                <option value="Cancel">Cancel</option>
                            </select>
                        </div>
                        <div id="leaves">

                        </div>
                        <div class="add">
                            <input type="button" value="+Add" onclick="addleave()">
                        </div>
                    </div>

                    <div class="showdata">
                            <table class="tab">
                                <tr>
                                    <div class="column">
                                        <div class="coll">
                                            <h4>Leave Type</h4>
                                        </div>
                                        <div class="coll">
                                            <h4>Date</h4>
                                        </div>
                                        <div class="coll">
                                            <h4>Days</h4>
                                        </div>
                                        <div class="coll">
                                            <h4>Status</h4>
                                        </div>
                                </tr>
                                <tr>
                                    <div class="column2">
                                        <div class="col">
                                            <p> </p>
                                        </div>
                                        <div class="col">
                                            <p> </p>
                                        </div>
                                        <div class="col">
                                            <p> </p>
                                        </div>
                                        <div class="col">
                                            <p> </p>
                                        </div>
                                        <div class="col">
                                            <p> </p>
                                        </div>
                                    </div>
                                </tr>
                                <tr>
                                    <div class="column2">
                                        <div class="col">
                                            <p> </p>
                                        </div>
                                        <div class="col">
                                            <p> </p>
                                        </div>
                                        <div class="col">
                                            <p> </p>
                                        </div>
                                        <div class="col">
                                            <p> </p>
                                        </div>
                                        <div class="col">
                                            <p> </p>
                                        </div>
                                    </div>
                                </tr>
                        </div>
                    </div>
                </div>
                
    </div>
</body>

<script>
    function addleave() {
        let data = "";
        data += `<div class="heading">
                <h3>Add leave</h3>
                </div>
                <div class="leavecontent">
                    <div class="ldata">
                        <label for="ld">Leave Date
                    </div>
                    <div class="ldata">
                        <label for="lt">Leave Type
                    </div>
                    <div class="ldata">
                        <label for="hd">Half day
                    </div>
                </div>
                <div class="leavecontent">
                    <div class="lin">
                         <input type="text"  placeholder="Leave Date">
                    </div>
                    <div class="lin">
                         <input type="text"  placeholder="Leave Type">
                    </div>
                    <div class="hdin">
                        
                    </div>
                </div>
                <div class="reason">
                    <label for="reason">Reason<br>
                    <input type="textarea"  name="reason">
                </div>
                <div class="apply">
                    <a href="cancel" class="applied" id="two">Cancel
                    <a href="apply" class="applied" id="one">Apply
                    
                </div>`;

        let showleaves = document.createElement("div");
        showleaves.className = "show";
        showleaves.innerHTML = data;
        document.getElementById("leaves").appendChild(showleaves);

    }
</script>

</html>