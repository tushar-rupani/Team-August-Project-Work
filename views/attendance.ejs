                        </div>
                        <div class="card-1" id="five">
                            <p>Days</p>
                            <p>10</p>
                        </div>
                        <div class="card-1" id="six">
                            <p>Days</p>
                            <p>10</p>
                        </div>
                        <div class="card-1" id="seven">
                            <p>Days</p>
                            <p>10</p>
                        </div>
                    </div>

                    
                    <div class="data">
                        <input class="i-data" type="date" >
                        <input class="i-data" type="date" >
                    </div>
                    <table class="tab">
                        <tr>
                            <div class="column">
                                <div class="col">
                                    <h4>Date</h4>
                                </div>
                                <div class="col">
                                    <h4>Entry-Time</h4>
                                </div>
                                <div class="col">
                                    <h4>Exit-Time</h4>
                                </div>
                                <div class="col">
                                    <h4>Break-time</h4>
                                </div>
                                <div class="col">
                                    <h4>Working-hours</h4>
                                </div>
                        </tr>
                        <tr>
                            <div class="column2">
                                <div class="col">
                                    <p><%= showquery[0][0].date %></p>
                                </div>
                                <div class="col">
                                    <p><%= showquery[0][0].check_in %></p>
                                </div>
                                <div class="col">
                                    <p><%= showquery[0][0].check_out %></p>
                                </div>
                                <div class="col">
                                    <p>01/03/2023</p>
                                </div>
                                <div class="col">
                                    <p><%= showquery[0][0].hours_worked %></p>
                                </div>
                            </div>
                        </tr>
                        
                    </table>
                
            </div>
            


        </main>
