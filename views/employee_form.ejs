<script>
    var $x = jQuery.noConflict();
    //    alert("Versionx: "+$x.fn.jquery);
    $x('.btnNext').click(function () {
        $x('.nav-pills .active').parent().next('li').find('a').trigger('click');
    });

    $x('.btnPrevious').click(function () {
        $x('.nav-pills .active').parent().prev('li').find('a').trigger('click');
    });


</script>
<script src="http://code.jquery.com/jquery-1.8.2.js"></script>
<script src="http://code.jquery.com/ui/1.9.1/jquery-ui.js"></script>

<script type="text/javascript">
    var $y = jQuery.noConflict();
    $y(function () {


        var date = new Date();
        console.log(date);
        var currentMonth = date.getMonth();
        var currentDate = date.getDate();
        var currentYear = date.getFullYear();
        $y('#dob').datepicker({
            maxDate: new Date(currentYear, currentMonth, currentDate)

        });
        $y("#dob").on("change", function () {
            var selected = $y(this).val();
            console.log(selected);
            if ($y(this).val() == "") {

                $y("#basicnextBtn").attr("disabled", true);

            } else {
                $y("#basicnextBtn").attr("disabled", false);

            }
        });

    });

</script>




