<form action="insert" method="post">
<div class="basic-info">
    <div class="all">
        <div class="image">
            <div class="card-header">
                <h4> Photo</h4>
            </div>
            <div class="photo">
                <img src="" alt="">
                <!-- <input type="file" class="btn btn-select" value="Choose File"> -->

                <input class="btn-style" type="button" value="Remove">
            </div>
        </div>
        <div class="info">
            <div class="card-header">
                <h4> Basic information</h4>
            </div>
            <div class="form">
                <div class="part">
                    <label for="name">Full_Name</label>
                    <input class="btn-style in-width" type="text" name="name">
                    <label for="email">Email</label>
                    <input class="in-width" type="email" name="email">
                    <label for="gender">Gender</label>
                    <select name="gender" id="gender">
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                        <option value="other">Other</option>
                    </select>
                </div>
                <div class="part">
                    <label for="bdate">Date of Birth</label>
                    <input type="date" name="dob">
                    <label for="status">Marital status</label>
                    <!-- <input type="checkbox"> -->
                    <select name="status" id="status">
                        <option value="Married">Married</option>
                        <option value="Unmarried">Unmarried</option>
                    </select>
                    <!-- <input type="checkbox" name="toggle" id="toggle"> -->
                    <label for="WFH">Work From Home</label>
                    <div class="toggle">
                        <div class="work"> <input class="wfh" type="radio" name="wfh"
                                class="toggle" id="wfh">Yes </div>
                        <div class="work"><input class="wfh" type="radio" name="wfh"
                                class="toggle" id="wfh">No</div>
                    </div>

                </div>
                <div>
                    <input type="submit" value="submit"></div>
                </div>
            </div>
        </div>

    </div>

</div>
</form>