<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hotline</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap"
        rel="stylesheet">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp" rel="stylesheet">

    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/hotline.css">

</head>

<body>
    <div class="container">

           
        <%- include('./common/sidebar') %>
        <main>

            <div class="dashboard">
                <div>
                    <h1>Hotline</h1>
                </div>
                <div>
                    <div class="gadgets-side__header">
                        <button class="menu-button" id="menu-btn">
                            <span class="material-icons-sharp menu-button__icon">menu</span>
                        </button>

                        <div class="theme-toggler">
                            <span class="
                            material-icons-sharp 
                            theme-toggler__button
                            theme-toggler__button--light
                            theme-toggler__button--active">light_mode</span>
                            <span class="
                            material-icons-sharp 
                            theme-toggler__button--dark
                            theme-toggler__button">dark_mode</span>
                        </div>

                        <div class="profile">
                            <div class="profile__info">
                                <p>Hey, <b class="user-name"></b></p>
                                <small class="text-muted">SDL-1</small>
                            </div>
                            <div>
                                <a href="#" onclick="location.assign('/self/profile')">
                                <img class="profile__photo" src="https://hrms.appdemoserver.com/assets/img/avatars/profile_image.jpg" alt="profile-picture">
                                </a>
                            </div>
                        </div>
                    </div>

                </div>

            </div>


            <div class="dashboard__insights">

                <div class="card">
                    <div class="count">
                        <div class="count-record">
                            <div class="img">
                                <span class="material-symbols-outlined">groups</span>
                            </div>
                            <div class="text">
                                <span>Online</span>
                                <p id="online-number"></p>
                            </div>
                        </div>
                        <div class="count-onbreak">
                            <div class="img">
                                <span class="material-symbols-outlined">
                                    restaurant
                                </span>
                            </div>
                            <div class="text">
                                <span>On Break</span>
                                <p id="onBreak-number"></p>
                            </div>
                        </div>
                        <div class="count-WFH">
                            <div class="img">
                                <span class="material-symbols-outlined">
                                    location_home
                                </span>
                            </div>
                            <div class="text">
                                <span>WFH</span>
                                <p>-</p>
                            </div>
                        </div>
                        <div class="count-offline">
                            <div class="img">
                                <span class="material-symbols-outlined">
                                    person_add_disabled
                                </span>
                            </div>
                            <div class="text">
                                <span>Offline</span>
                                <p id="offline-number"></p>
                            </div>
                        </div>
                        <div class="count-leave">
                            <div class="img">
                                <img src="/assets/employee-leave.svg" alt="">
                            </div>
                            <div class="text">
                                <span>On Leave</span>
                                <p>18</p>
                            </div>
                        </div>
                    </div>


                    <div class="search-bar">
                        <div></div>
                        <div class="search">
                            <div class="input">
                                <input type="text" id="search-user" placeholder="Search Employee..">
                            </div>
                            <div>
                                <span class="material-icons-sharp">autorenew</span>
                            </div>
                        </div>
                    </div>



                    <div class="display">
                        
                    </div>

                </div>



            </div>




    </div>
    </main>
    <script src="https://kit.fontawesome.com/30e122f54b.js" crossorigin="anonymous"></script>

  
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.10.1/dist/sweetalert2.all.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    </script>
    <script src="/js/socket-script.js"></script>
    <script src="/js/hotline.js"></script>
    <script src="/js/theme.js"></script>
</body>

</html>