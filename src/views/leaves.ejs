        <link rel="stylesheet" href="/css/style.css">
<script type="text/javascript" src="/js/leaves.js"></script>

    

    <style>
        .flex {
            display: flex;
            justify-content: center;
            margin: 20px 0;
            gap: 0 15px;
            font-family: 'Hanken Grotesk', sans-serif;
            font-weight: bolder;
        }

        body{
            margin-bottom: 0;
        }
        p {
            font-size: 13px !important;
            margin-bottom: 0;
        }

        .container {
            grid-template-columns: 1fr 6fr;
        }
        h3{
            margin-top: 0;
            margin-left: 2px;
            font-family: 'poppins', sans-serif !important;
        }

        main {
            width: 100%;
        }
        
.info{
    color: "green" !important;
}
    </style>

</head>

<body>
    <div class="container">

        <%- include('./common/sidebar') %>
            <main>

                <div class="dashboard">
                    <div>
                        <h1>Leaves</h1>
                    </div>
                    <div>
                        <div class="gadgets-side__header">
                            <button class="menu-button" id="menu-btn">
                                <span class="material-icons-sharp menu-button__icon">menu</span>
                            </button>

                            <div class="theme-toggler">
                                <span class="
                                material-icons-sharp 
                                theme-toggler__button
                                theme-toggler__button--light
                                theme-toggler__button--active">light_mode</span>
                                <span class="
                                material-icons-sharp 
                                theme-toggler__button--dark
                                theme-toggler__button">dark_mode</span>
                            </div>

                            <div class="profile">
                                <div class="profile__info">
                                    <p>Hey, <b class="user-name">Jyotsana</b></p>
                                    <small class="text-muted">SDL-1</small>
                                </div>
                                <div>
                                    <a href="#" onclick="location.assign('/self/profile')">
                                        <img class="profile__photo"
                                            src="https://hrms.appdemoserver.com/assets/img/avatars/profile_image.jpg"
                                            alt="profile-picture">
                                        </a>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>

                <div class="main-content">
                    <div class="flex">
                        <div class="card-1" id="one">
                            <p>Casual Leaves</p>
                            <p>
                                <%= leaveRemaining[0] %> out of <%= allowed[0] %>
                            </p>
                        </div>
                        <div class="card-1" id="two">
                            <p>Sick Leaves</p>
                            <p>
                                <%= leaveRemaining[1] %> out of <%= allowed[1] %>
                            </p>
                        </div>
                        <div class="card-1" id="three">
                            <p>Unplanned Leaves</p>
                            <p>
                                <%= leaveRemaining[2] %> out of <%= allowed[2] %>
                            </p>
                        </div>
                        <div class="card-1" id="four">
                            <p>Planned Leaves </p>
                            <p>
                                <%= leaveRemaining[3] %> out of <%= allowed[3] %>
                            </p>
                        </div>

                    </div>
                    <div class="content">

                        <div class="search">
                            <input type="text" placeholder="Search...">
                        </div>
                        <div class="status">
                            <select class="status" name="status" onchange="getData(this)">
                                <option value="*">Status:All<i class="bi bi-chevron-down"></i></option>
                                <option value="accepted">Accepted</option>
                                <option value="rejected">Rejected</option>
                                <option value="pending">Pending</option>
                                <option value="WFH">WFH</option>
                                <option value="Cancel">Cancel</option>
                            </select>
                        </div>
                        <div id="leaves">
                            <div class="show hidden">
                                <div class="heading">
                                    <h3>Add leave</h3>
                                </div>
                                <div class="leavecontent">
                                    <div class="ldata">
                                        <label for="ld">Leave Date
                                    </div>
                                    <div class="ldata">
                                        <label for="lt">Leave Type
                                    </div>
                                    <div class="ldata">
                                        <label for="hd">Half day
                                    </div>
                                </div>
                                <div class="leavecontent">
                                    <div class="ld">
                                        <input type="date" id="date" name="date" placeholder="Leave Date"
                                            min="<%= currentDate %>">
                                    </div>
                                    <div class="lt">
                                        <select name="type" id="type">
                                            <option value="SL">Sick Leave</option>
                                            <option value="CL">Casual Leave</option>
                                            <option value="PL">Planned Leave</option>
                                            <option value="UPL">Unplanned Leave</option>
                                        </select>
                                    </div>
                                    <div class="hdin">
                                        <select name="day" id="day">
                                            <option value="1">Yes</option>
                                            <option value="0" selected>No</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="reason">
                                    <label for="reason">Reason<br>
                                        <!-- <input type="textarea" id="reason" name="reason"> -->
                                        <textarea name="reason" id="reason" rows="5"></textarea>
                                </div>
                                <div class="apply">
                                    <input type="button" onclick="cancelleaves()" class="applied" id="two"
                                        value="Cancel">
                                    <input type="button" onclick="addleaves()" class="applied" id="one" value="Apply">
                                </div>
                            </div>
                        </div>
                        <div class="add">
                            <input type="button" value="+Add" onclick="addleave()">
                        </div>
                    </div>

                    <div class="showdata">
                        <table class="tab">
                            <tr>
                                <div class="column-entry">
                                    <div class="coll">
                                        <h4>Leave Type</h4>
                                    </div>
                                    <div class="coll">
                                        <h4>Date</h4>
                                    </div>
                                    <div class="coll">
                                        <h4>Half Day</h4>
                                    </div>
                                    <div class="coll">
                                        <h4>Reason</h4>
                                    </div>
                                    <div class="coll">
                                        <h4>Status</h4>
                                    </div>
                                </div>
                            </tr>

                            <% for(let i=0;i<showquery[0].length;i++) { %>
                                <tr class="row">
                                    <div class="column2" id="<%= showquery[0][i].id %>" onclick="getLeaveData(this)">
                                        <div class="col">
                                            <p>
                                                <%= showquery[0][i].leave_type %>
                                            </p>
                                        </div>
                                        <div class="col">
                                            <p>
                                                <%= showquery[0][i].leave_date %>
                                            </p>
                                        </div>
                                        <div class="col">
                                            <% if(showquery[0][i].half_day=="1" ) { %>
                                                <p>Yes</p>
                                                <% } %>

                                                    <% if(showquery[0][i].half_day=="0" ) { %>
                                                        <p>No</p>
                                                        <% } %>
                                        </div>
                                        <div class="col">
                                            <p>
                                                <%= showquery[0][i].leave_reason.substr(0, 20)%>..
                                            </p>
                                        </div>
                                        <div class="col">
                                            <p class="<% if(showquery[0][i].leave_status== " rejected") { %>red <% } %>
                                                    <% if(showquery[0][i].leave_status=="accepted" ) { %> green <% } %>
                                                            "><%= showquery[0][i].leave_status%>
                                            </p>
                                        </div>

                                    </div>
                                </tr>
                                <% } %>
                        </table>

                    </div>
                </div>
    </div>
    </div>

    </div>
    <div class="ui modal">
        <div class="header">
          Leave Details
        </div>
        <div class="image content">
          <div class="ui medium image">
            <img src="../../assets/leave.png">
          </div>
          <div class="description">
            <div class="ui header" id="modal-header">You have requested leave on this date</div>
            <!-- <p>We've grabbed the following image from the <a href="https://www.gravatar.com" target="_blank">gravatar</a> image associated with your registered e-mail address.</p> -->
            <p>Our company's leave request system streamlines the process for employees to request time off, providing a seamless and efficient way to manage leave requests. </p>
            <h2>Leave Type: <span id="leave-type">SL</span></h2>

            <h2>Leave Reason: <p id="leave-reason"></p></h2>

            <h2>Leave Status: <span id="leave-status">SL</span></h2>

            <h2>Half Day: <span id="leave-half">SL</span></h2>
        </div>
        </div>
        <div class="actions">
          <div class="ui black deny button">
            Close
          </div>
          
        </div>
      </div>
</body>
<script src="/js/theme.js"></script>
<script>
    function addleave() {
        document.querySelector(".show").classList.remove("hidden")
    }

    const getElement = (selector) => {
        return document.querySelector(selector);
    }
    
    async function getLeaveData(e){
        let id = e.id;
        let res = await fetch(`/leaves/get-leave-id/${id}`);
        let [data] = await res.json();
        console.log(data);
        let header = getElement("#modal-header");
        header.innerText = `You have requested leave on date: ${data.leave_date.substr(0,10)}`;

        let type = getElement("#leave-type");
        type.innerText = `${data.leave_type}`;

        let reason = getElement("#leave-reason");
        reason.innerText = `${data.leave_reason}`;
        
        let status = getElement("#leave-status");
        if(data.leave_status == "rejected"){
            status.style.color = "red"
        }else if(data.leave_status == "pending"){
            status.style.color = "orange"
        }else{
            status.style.color = "green"
        }
        status.innerText = `${data.leave_status}`

        let half = getElement("#leave-half");
        half.innerText = data.half_day

        $('.ui.modal').modal('show');
    }
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>

</html>